<hibernate-configuration>
    <session-factory>
        
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/safarnama?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect" >org.hibernate.dialect.MySQL57Dialect</property> 
        <property name="show_sql">true</property> 
        <property name="hbm2ddl.auto">update</property> 
        
         <mapping class="com.safarnama.entity.Vendor" />
        <mapping class="com.safarnama.entity.Booking" />
        <mapping class="com.safarnama.entity.Vehicle" />
        
   
    </session-factory>
</hibernate-configuration>
